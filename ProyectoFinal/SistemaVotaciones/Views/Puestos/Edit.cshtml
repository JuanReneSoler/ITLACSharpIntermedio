@{
    Layout = "~/Views/Shared/Administrador.cshtml";
}
@model Models.Dtos.PuestoRequest
@using (Html.BeginForm("Edit", "Puestos", FormMethod.Post,new{@class="form-row"}))
{
    <div class="col-md-12 mb-3">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {})
        @Html.HiddenFor(x=>Model.Id)
    </div>
    <div class="col-md-12 mb-3">
        @Html.LabelFor(x=>Model.Nombre, new {})
        @Html.TextBoxFor(x=>Model.Nombre,new{@class="form-control", @required = "" })
        @Html.ValidationMessageFor(x=>Model.Nombre,"*",new{})
    </div>
    <div class="col-md-12 mb-3">
        @Html.LabelFor(x=>Model.Descripcion,new{})
        @Html.TextAreaFor(x=>Model.Descripcion,new{@class="form-control", @required = "" })
        @Html.ValidationMessageFor(x=>Model.Descripcion,"*",new{})
    </div>
    <div class="col-md-12 mb-3">
        <a class="btn btn-danger" href="/Puestos/Index">Cancelar</a>
        <button class="btn btn-success">Guardar</button>
    </div>
}



    @Html.ValidationSummary("", new { })
    <div class="d-flex justify-content-center text-center mb-5">
        <div class="list-group d-flex justify-content-center row">
            @foreach (var item in Model)
            {
                <form class="col-6" method="post" action="/Votacion/Seleccion">
                    @Html.AntiForgeryToken()
                    @Html.Hidden("puesto",item.Id)
                    @Html.Hidden("puestoName", item.Nombre)
                    <button class="list-group-item">@item.Nombre</button>
                </form>
            }
        </div>
    </div>

    <div class="btn btn-group d-flex justify-content-center text-center mb-5">
        <form class="col-3" method="post" action="/Votacion/SaveVotacion">
            @Html.AntiForgeryToken()
            <button class="btn btn-success">Finalizar votacion</button>
        </form>
    </div>


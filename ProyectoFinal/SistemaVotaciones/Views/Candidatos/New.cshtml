
@{
    Layout = "~/Views/Shared/Administrador.cshtml";
}
@model Models.Dtos.CandidatosRequest


<h2>@ViewData["LastActividadText"]</h2>
@using(Html.BeginForm("New", "Candidatos", FormMethod.Post, new {@class="form-row",@enctype="multipart/form-data"}))
{
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {})
        @Html.HiddenFor(x=>Model.EleccionId,new{@Value=ViewData["LastActivatedId"]})
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x=>Model.CiudadanoId,new{})
        @Html.DropDownListFor(x=>Model.CiudadanoId, ViewBag.Ciudadanos as SelectList, "--Seleccione un ciudadano--", new{@class="form-control", @required=""})
        @Html.ValidationMessageFor(x=>Model.CiudadanoId,"", new {})
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x=>Model.PartidoId,new{})
        @Html.DropDownListFor(x=>Model.PartidoId, ViewBag.Partidos as SelectList, "--Seleccione un partido politico--", new{@class="form-control", @required=""})
        @Html.ValidationMessageFor(x=>Model.PartidoId,"", new {})
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x=>Model.PuestoId,new{})
        @Html.DropDownListFor(x=>Model.PuestoId, ViewBag.Puestos as SelectList, "--Seleccione un partido politico--", new{@class="form-control", @required=""})
        @Html.ValidationMessageFor(x=>Model.PuestoId,"", new {})
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x=>Model.Foto,new{})
        @Html.TextBoxFor(x=>Model.Foto, new{@class="form-control", @type="file"})
        @Html.ValidationMessageFor(x=>Model.PuestoId,"", new {})
    </div>
    <div class="col-md-12 mb-3">
        <a href="/Candidatos/Index" class="btn btn-danger">Cancelar</a>
        <button class="btn btn-success">Guardar</button>
    </div>
}

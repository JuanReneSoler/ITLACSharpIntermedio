
@{
    Layout = "~/Views/Shared/Administrador.cshtml";
}
@model Models.Dtos.CandidatosRequest


<h2>@ViewData["LastActividadText"]</h2>
<div class="form-row">
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x => Model.CiudadanoId, new { })
        @Html.TextBoxFor(x => Model.CiudadanoText, new { @class = "form-control", @disabled = "" })
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x => Model.PartidoId, new { })
        @Html.TextBoxFor(x => Model.PartidoText, new { @class = "form-control", @disabled = "" })
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x => Model.PuestoId, new { })
        @Html.TextBoxFor(x => Model.PuestoText, new { @class = "form-control", @disabled = "" })
    </div>
    <div class="col-sm-12 mb-3">
        @Html.LabelFor(x => Model.Foto, new { })
        <img style="width:50px;" src="data:image/png;base64, @(Model.FotoBase64)" alt="">
    </div>
    <div class="col-md-12 mb-3">
        <a href="/Candidatos/Index" class="btn btn-danger">Cancelar</a>
    </div>
</div>

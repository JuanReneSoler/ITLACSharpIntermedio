
@{
    Layout = "~/Views/Shared/Administrador.cshtml";
}
@model Models.Dtos.EleccionesRequest

@using (Html.BeginForm("New", "Elecciones", FormMethod.Post, new {@class="form-row"}))
{
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {})
    </div>
    <div class="col-md-12 mb-3">
        @Html.LabelFor(x=>Model.Nombre,new{})
        @Html.TextBoxFor(x=>Model.Nombre,new{@class="form-control", @required=""})
        @Html.ValidationMessageFor(x=>Model.Nombre,"",new{})
    </div>
    <div class="col-md-12 mb-3">
        @Html.LabelFor(x=>Model.Fecha,new{})
        @Html.TextBoxFor(x=>Model.Fecha, "{0:yyyy-MM-dd}", new{@type="date", @class="form-control", @required = "" })
        @Html.ValidationMessageFor(x=>Model.Fecha,"",new{})
    </div>
    <div class="col-md-12 mb-3">
        <a href="/Elecciones/Index" class="btn btn-danger">Cancelar</a>
        <button class="btn btn-success">Guardar</button>
    </div>
}



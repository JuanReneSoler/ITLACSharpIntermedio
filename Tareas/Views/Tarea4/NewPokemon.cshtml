

@model Tareas.Models.PokemonRequest

<h3>Nuevo Pokemon</h3>

@using(Html.BeginForm("NewPokemon", "Tarea4", FormMethod.Post, new { @class="form-row"}))
{
    <div class="col-12 mb-3">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {})
    </div>
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>Model.Nombre,new{})
        @Html.TextBoxFor(x=>Model.Nombre,new{@class="form-control"})
        @Html.ValidationMessageFor(x=>Model.Nombre, "" ,new{})
    </div>
    @* <div class="col-12 mb-3">
        @Html.LabelFor(x=>Model.RegionId,new{})
        @Html.DropDownListFor(x=>Model.RegionId, ViewBag.Regiones as SelectList,new{@class="form-control"})
        @Html.ValidationMessageFor(x=>Model.RegionId, "" ,new{})
    </div> *@
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>Model.RegionesId, new {})
        <ul id="listRegiones"></ul>
        <button type="button" class="btn btn-info" onclick="$('#regionesModal').modal('show')">A単adir region</button>
        <div class="modal" tabindex="-1" role="dialog" id="regionesModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Regiones</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @{
                            var listRegiones = ViewBag.Regiones as IEnumerable<RegionesListResponse>;
                        }
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre de la Region</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(listRegiones.Any())
                                {
                                    var c = 0;
                                    foreach(var item in listRegiones)
                                    {
                                        <tr>
                                            <td>@item.Nombre</td>
                                            <td>
                                                <input value="@item.Id" id="@(c)" name="" type="checkbox" onclick="Binding(this, 'RegionesId', 'listRegiones', '@item.Nombre');">
                                            </td>
                                        </tr>
                                        c++;
                                    }
                                }   
                            </tbody>
                        </table>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        @* <button type="button" class="btn btn-primary">Save changes</button> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>Model.TiposId,new{})
        <ul id="listTipos"></ul>
        <button type="button" class="btn btn-info" onclick="$('#tiposModal').modal('show')">A単adir tipos</button>
        <div class="modal" tabindex="-1" role="dialog" id="tiposModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Regiones</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @{
                            var listTipo = ViewBag.Tipos as IEnumerable<TipoListResponse>;
                        }
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre de la Region</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(listTipo.Any())
                                {
                                    var c = 0;
                                    foreach(var item in listTipo)
                                    {
                                        <tr>
                                            <td>@item.Nombre</td>
                                            <td>
                                                <input value="@item.Id" id="@(c)" name="" type="checkbox" onclick="Binding(this, 'TiposId', 'listTipos', '@item.Nombre');">
                                            </td>
                                        </tr>
                                        c++;
                                    }
                                }   
                            </tbody>
                        </table>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        @* <button type="button" class="btn btn-primary">Save changes</button> *@
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(x=>Model.TiposId, "" ,new{})
    </div>
    <div class="col-12">
        @Html.LabelFor(x=>Model.AtaquesId,new{})
        <ul id="listAtaque"></ul>
        <button type="button" class="btn btn-info mb-3" onclick="$('#ataquesModal').modal('show')">A単adir Ataque</button>
        <div class="modal" tabindex="-1" role="dialog" id="ataquesModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Regiones</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <label for="">A単adir Ataque</label>                        
                        <input type="text" id="ataque" class="form-control mb-3">
                        <button type="button" onclick="addAtaque('ataque', 'listAtaque', 'AtaquesId')" class="btn btn-secondary mb-2">Agregar Ataque</button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(x=>Model.AtaquesId, "" ,new{})
    </div>
    <div class="col-12 mb-3">
        <button class="btn btn-success">Guardar</button>
        <a href="/Tarea4/IndexPokemon" class="btn btn-danger">Volver</a>
    </div>
}


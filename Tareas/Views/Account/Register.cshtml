
@model RegisterDto
@{
    Layout="~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class="form-row"}))
{
    <div class="col-12">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("",new{})
    </div>
    <div class="col-12">
        @Html.LabelFor(x=>x.Email,new{})
        @Html.TextBoxFor(x=>x.Email,new{@class="form-control col-6"})
        @Html.ValidationMessageFor(x=>x.Email,"",new{})
    </div>
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>x.User,new{})
        @Html.TextBoxFor(x=>x.User,new{@class="form-control col-6"})
        @Html.ValidationMessageFor(x=>x.User,"",new{})
    </div>
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>x.Password,new{})
        @Html.PasswordFor(x=>x.Password,new{@class="form-control col-6"})
        @Html.ValidationMessageFor(x=>x.Password,"",new{})
    </div>
    <div class="col-12 mb-3">
        @Html.LabelFor(x=>x.ConfirmPassword,new{})
        @Html.PasswordFor(x=>x.ConfirmPassword,new{@class="form-control col-6"})
        @Html.ValidationMessageFor(x=>x.ConfirmPassword,"",new{})
    </div>
    <div class="col-12 mb-3">
        <button class="btn btn-success">Crear</button>
        <a href="/Tarea5/Index" class="btn btn-danger">Volver</a>
    </div>
}
 
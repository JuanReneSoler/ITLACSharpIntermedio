

@model dynamic

@{
    var url = $"/{Model.ControllerName}/{Model.ActionName}";
    var c = 1;
    var disabled = Model.Pages<1?"":"disabled";
}

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item @(disabled)"><a class="page-link" href="">Previous</a></li>
    
    @while (c <= Model.Pages)
    {
        <li class="page-item"><a class="page-link" href="@(url)?page=@(c)">@c</a></li>
        c++;
    }
    <li class="page-item @(disabled)"><a class="page-link" href="">Next</a></li>
  </ul>
</nav>





